datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String @id @default(uuid())
  name       String
  github_id  Int
  avatar_url String
  login      String

  messages     Message[]
  transactions Transaction[]
  @@map("users")
}

model Message {
  id         String   @id @default(uuid())
  text       String
  created_at DateTime @default(now())

  user    User   @relation(fields: [user_id], references: [id])
  user_id String
  @@map("messages")
}

model Transaction {
  id          String   @id @default(uuid())
  description String
  value       Float
  date        String
  type        String
  created_at  DateTime @default(now())

  user    User   @relation(fields: [user_id], references: [id])
  user_id String
  @@map("transactions")
}
